{% extends 'layouts/visitor/base-visitor.html.twig' %}

{% block namespace %}login{% endblock %}

{% block visitor_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form  class="mt-5" action="{{ path('login') }}" method="post">
        <div class="form-group">
            <label for="username">Email:</label>
            <input type="email" class="form-control" id="email" name="_username" value="{{ last_username }}"/>
        </div>
        <label for="password">Password:</label>
        <input type="password" class="form-control" id="password" name="_password"/>

        <input type="hidden" name="_target_path" value="/"/>

        <button  class="btn btn-primary mt-4" type="submit">login</button>
    </form>
{% endblock %}
